\mode<presentation>

\definecolor{mainred}{RGB}{192, 0, 0}
\definecolor{mainblue}{RGB}{0, 32, 96}
\definecolor{background}{RGB}{255, 255, 255}

\setbeamercolor{titlelike}{fg=mainred, bg=background}
\setbeamercolor{frametitle}{fg=mainred, bg=background}

\setbeamercolor{conference}{fg=white, bg=mainblue}
\setbeamercolor{alerted text}{fg=mainred, bg=background}

\setbeamercolor{headline}{fg=white, bg=mainblue}
\setbeamercolor{footline}{fg=mainblue, bg=background}
\setbeamercolor{splitline}{fg=mainblue}

\setbeamercolor{itemize item}{fg=mainred, bg=background}
\setbeamercolor{itemize subitem}{fg=mainred, bg=background}
\setbeamercolor{itemize subsubitem}{fg=mainred, bg=background}

\setbeamercolor{enumerate item}{fg=mainred, bg=background}
\setbeamercolor{enumerate subitem}{fg=mainred, bg=background}
\setbeamercolor{enumerate subsubitem}{fg=mainred, bg=background}

